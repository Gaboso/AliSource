<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Campo pai-->
    <style name="field" parent="android:Widget.EditText">
        <item name="android:layout_height">wrap_content</item>
        <!-- Padding -->
        <item name="android:paddingTop">@dimen/medida_12</item>
        <item name="android:paddingBottom">@dimen/medida_12</item>
        <item name="android:paddingRight">@dimen/medida_4</item>
        <item name="android:paddingLeft">@dimen/medida_4</item>
        <!-- Margem -->
        <item name="android:layout_marginTop">@dimen/medida_4</item>
        <item name="android:layout_marginBottom">@dimen/medida_4</item>
        <!-- Texto -->
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="field_number" parent="android:Widget.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <!-- Padding -->
        <item name="android:paddingTop">@dimen/medida_12</item>
        <item name="android:paddingBottom">@dimen/medida_12</item>
        <item name="android:paddingRight">@dimen/medida_4</item>
        <item name="android:paddingLeft">@dimen/medida_4</item>
        <!-- Margem -->
        <item name="android:layout_marginTop">@dimen/medida_4</item>
        <item name="android:layout_marginBottom">@dimen/medida_4</item>
        <!-- Texto -->
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="field_number.double">
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="field_number.integer">
        <item name="android:inputType">number</item>
    </style>

</resources>